{
  "manifest_version": 3,
  "name": "SpecterPanel",
  "version": "1.1.0",
  "description": "Inject a persistent floating panel into webpages for content extraction and AI analysis",
  
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SpecterPanel"
  },
  
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  },
  
  "host_permissions": [
    "http://localhost:8000/*"
  ]
}